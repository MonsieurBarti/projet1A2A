extends layout

block content
  h1.title.is-1= article.title
  h5.subtitle Written by #{author}
  p= article.body
  hr
    if user 
      if user.id == article.author
        a.button.is-link(href='/articles/edit/'+article._id) Edit
        a.button.is-danger.delete-article(href='#', data-id = article._id) Delete
