doctype html
html
    head
      title #{title}
      link(rel='stylesheet', href='/bower_components/bulma/css/bulma.css')
      link(rel='stylesheet', href='/css/style.css')
    body
      nav.navbar
        .navbar-brand
          a.navbar-item(href='/')
            img(src='https://bulma.io/images/bulma-logo.png', width='128', height='32')
        .navbar-menu
          .navbar-start
            a.navbar-item(href='/') Home
            if user
              a.navbar-item(href='/articles/add') Add Article
          .navbar-end
            if user
              .navbar-item
                .buttons
                  a.button.is-primary.is-rounded(href='/users/logout') 
                    strong Log Out
            else
              .navbar-item
                .buttons
                  a.button.is-primary.is-rounded(href='/users/register') 
                    strong Register
                  a.button.is-light.is-rounded(href='/users/login') 
                    .is-primary Log in
                  
                  
      .container
        != messages('message', locals)
        if errors
          each error, i in errors
            div(class="notification is-danger") #{error.msg}
        block content
        br
        hr
        footer.footer
          .content.has-text-centered
            p Copyright &copy; 2019 Monkey D. Barti
      script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js")
      script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
      script(src='/js/main.js')
